{
  "license": "./copyright_header.txt",
  "ignore": [
    ".next/**",
    "**/.DS_Store",
    "**/*.md",
    "pnpm-lock.yaml",
    "COPYING"
  ],
  "defaultFormat": {
    "prepend": "/**",
    "append": " */\n",
    "eachLine": {
      "prepend": " * "
    }
  },
  "licenseFormats": {
    "js|cjs|ts|tsx|css|scss": {
      "prepend": "/**",
      "append": " */\n",
      "eachLine": {
        "prepend": " * "
      }
    },
    "env|env-e|example|local|yaml|yml|^Dockerfile": {
      "eachLine": {
        "prepend": "# "
      },
      "append": "\n"
    },
    "prisma": {
      "eachLine": {
        "prepend": "// "
      },
      "append": "\n"
    }
  }
}