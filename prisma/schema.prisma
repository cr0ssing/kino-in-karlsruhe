generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cinema {
  id        Int         @id @default(autoincrement())
  name      String      @unique
  address   String
  website   String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  Screening Screening[]

  @@index([id])
}

model Screening {
  id         Int      @id @default(autoincrement())
  cinemaId   Int
  cinema     Cinema   @relation(fields: [cinemaId], references: [id])
  startTime  DateTime
  movie      Movie    @relation(fields: [movieId], references: [id])
  movieId    Int
  properties String[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([movieId])
}

model Movie {
  id        Int         @id @default(autoincrement())
  title     String
  posterUrl String?
  tmdbId    Int?
  length    Int?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  Screening Screening[]
}
